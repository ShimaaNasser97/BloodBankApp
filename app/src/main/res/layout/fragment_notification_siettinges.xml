<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/dim_8">

    <TextView
        android:id="@+id/fragment_setting_notification_tv"
        android:layout_width="match_parent"
        android:layout_height="90dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_8"
            android:orientation="vertical"
            android:background="@drawable/shape_et">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_45"
                android:background="#E3E3E9"
                android:text="@string/blood_type"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/fragment_setting_notification_rv_blood_type"
                android:layout_width="match_parent"
                android:layout_height="150dp"
             ></android.support.v7.widget.RecyclerView>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dim_8"
        android:background="@drawable/shape_et">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_et_h"
            android:background="#E3E3E9"
            android:text="@string/gavernment"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_setting_notification_rv_gavernment"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            ></android.support.v7.widget.RecyclerView>
         </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_8"
            android:background="@color/colorPrimaryDark"
            android:text="save"
            android:textColor="@color/text_white"/>
    </LinearLayout>
</RelativeLayout>