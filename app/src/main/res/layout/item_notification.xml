<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginBottom="@dimen/dim_8">

    <ImageView
        android:id="@+id/item_notification_iv_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dim_8"
        android:layout_marginEnd="@dimen/dim_8"
        android:layout_marginBottom="@dimen/dim_12dp"
        android:layout_marginTop="@dimen/dim_4"
        android:src="@drawable/read_notification"
        />

    <TextView
        android:id="@+id/item_notification_tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:layout_marginStart="@dimen/dim_8"
        android:layout_marginEnd="@dimen/dim_8"
        android:layout_toEndOf="@id/item_notification_iv_icon"
        android:layout_toStartOf="@id/item_notification_tv_date"/>

    <TextView
        android:id="@+id/item_notification_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:layout_marginEnd="@dimen/dim_8"
        android:layout_marginStart="@dimen/dim_8"
        />


</RelativeLayout>